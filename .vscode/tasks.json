{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],

            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compilando el archivo activo"
        }
    ]
}